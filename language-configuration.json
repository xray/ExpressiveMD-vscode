{
  "comments": {
    "blockComment": ["${//", "}"]
  },
  "brackets": [
    ["${", "}"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "${", "close": "}" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "**", "close": "**" },
    { "open": "_", "close": "_" },
    { "open": "`", "close": "`" }
  ],
  "surroundingPairs": [
    ["${", "}"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["**", "**"],
    ["_", "_"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(\\$\\{if|\\$\\{for|\\-\\-\\-)",
      "end": "^\\s*(\\$\\{end\\}|\\-\\-\\-)"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
